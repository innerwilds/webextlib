{
  "name": "webextension-library",
  "version": "2.0.0",
  "description": "The lib for TSRAuto",
  "main": "lib/index.cjs.js",
  "types": "types/index.d.ts",
  "module": "lib/index.esm.js",
  "files": [
    "lib",
    "types"
  ],
  "scripts": {
    "build": "run-s build:clean build:pro build:types build:copy",
    "build:clean": "if exist lib rmdir /S/ Q lib && if exist types rmdir /S /Q types",
    "build:copy": "copyfiles -u 1 src/*.d.ts types",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:pro": "rollup -c --environment NODE_ENV:production",
    "build:types": "tsc -p tsconfig.d.json",
    "build:watch": "pnpm run build:dev -- -w",
    "prepublishOnly": "pnpm run build",
    "start:firefox": "web-ext run --source-dir ./extension/ --verbose"
  },
  "keywords": [],
  "author": "aflyyyka",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": ">=5.28.0",
    "@typescript-eslint/parser": ">=5.28.0",
    "copyfiles": "^2.4.1",
    "eslint": ">=8.0.0",
    "eslint-config-xo": "^0.41.0",
    "eslint-config-xo-typescript": "^0.52.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.78.0",
    "tslib": "^2.4.0",
    "typescript": ">=4.4",
    "web-ext": "^7.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/events": "^3.0.0",
    "events": "github:innerwilds/ts-events",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13"
  }
}
